#!/usr/bin/env bash
set -euo pipefail

# Project-local entrypoint for Mario DevX.
#
# This is intentionally tiny: all real logic lives in `.mario/scripts/`.

ROOT_DIR="$(git rev-parse --show-toplevel 2>/dev/null || pwd)"
cd "$ROOT_DIR"

if [[ ! -x ".mario/scripts/mario" ]]; then
  echo "Mario DevX is not installed. Run:" >&2
  echo "  curl -fsSL https://raw.githubusercontent.com/valerio-mc/mario-devx/main/install.sh | bash" >&2
  exit 2
fi

exec ".mario/scripts/mario" "$@"
